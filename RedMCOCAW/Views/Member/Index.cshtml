@model IEnumerable<RedMCOCAW.Models.Member.MemberListItem>

@{
    ViewBag.Title = "Index";
}

<div class="text-center"><h2>Your Alliance Member List</h2></div>


@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MemberId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AllianceId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AllianceTag)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MemberId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AllianceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AllianceTag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MemberId }, new { @class = "btn btn-danger" }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.MemberId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

<div class="col-12 d-grid gap-2">
    @Html.ActionLink("Create New Member", "Create", null, new { @class = "btn btn-danger btn-lg btn-block" })
</div>

