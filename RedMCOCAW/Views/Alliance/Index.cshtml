@model IEnumerable<RedMCOCAW.Models.Alliance.AllianceListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AllianceId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AllianceTag)
        </th>        
        <th>@Html.DisplayNameFor(model => model.Members)
        </th>
        <th></th>
    </tr>

@if (Model != null)
{
    foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AllianceId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AllianceTag)
        </td>        
        <td>@Html.DisplayFor(modelItem => item.Members.ToList());
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.AllianceId }) |
            @Html.ActionLink("Details", "Details", new { id = item.AllianceId }) |
